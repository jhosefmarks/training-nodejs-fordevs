{
  "name": "training-nodejs-fordevs",
  "version": "3.0.0",
  "description": "",
  "keywords": [],
  "author": "Jhosef Marks de Carvalho",
  "license": "MIT",
  "repository": "github:jhosefmarks/training-nodejs-fordevs",
  "scripts": {
    "start": "node ./dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "watch": "tsc -w",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig.build.json -w",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "dev": "sucrase-node src/main/server.ts",
    "up": "npm run build && docker-compose up -d",
    "down": "docker-compose down",
    "check": "npx npm-check -s -u",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --no-cache",
    "test:ci": "npm t -- --coverage",
    "test:integration": "npm t -- --watch -c jest-integration-config.js",
    "test:staged": "npm t -- --findRelatedTests",
    "test:unit": "npm t -- --watch -c jest-unit-config.js",
    "test:verbose": "jest --passWithNoTests --runInBand --no-cache"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "bcrypt": "^5.1.1",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-date-scalars": "^0.2.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongo-round": "^1.0.0",
    "mongodb": "^4.17.1",
    "nodemon": "^3.1.0",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@shelf/jest-mongodb": "^4.3.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.10",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "copyfiles": "^2.4.1",
    "eslint": "^8.51.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.7",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mockdate": "^3.0.5",
    "rimraf": "^5.0.7",
    "sucrase": "^3.35.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": "20.x"
  },
  "_moduleAliases": {
    "@data": "dist/data",
    "@domain": "dist/domain",
    "@infra": "dist/infra",
    "@main": "dist/main",
    "@presentation": "dist/presentation",
    "@validation": "dist/validation"
  }
}
