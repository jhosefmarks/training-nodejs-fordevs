{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "es2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@data/*": [
        "data/*"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@infra/*": [
        "infra/*"
      ],
      "@main/*": [
        "main/*"
      ],
      "@presentation/*": [
        "presentation/*"
      ],
      "@validation/*": [
        "validation/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}